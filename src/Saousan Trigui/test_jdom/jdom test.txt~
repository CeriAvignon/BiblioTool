/**
 * 
 */
package test_jdom;
import java.io.File;
import java.io.IOException;
import java.util.List;

import org.jdom2.*;
import org.jdom2.input.SAXBuilder;

/**
 * @author saoussan
 *
 */
public class Test_jdom {

	/**
	 * @param args
	 * @throws IOException 
	 * @throws JDOMException 
	 */
	public static void main(String[] args) throws JDOMException, IOException {
		// TODO Auto-generated method stub
		System.out.println("N7ibbik barchaaaaaaaa");
		try{
		File inputFile = new File("simple.xml");

        SAXBuilder saxBuilder = new SAXBuilder();

        Document document = saxBuilder.build(inputFile);
        
        //document.getRootElement().getName():donne la racine de l'arbre
        System.out.println("Menu: " 
           + document.getRootElement().getName());
        //classElement contient la racine de l'arborescence : breakfast_menu
        Element classElement = document.getRootElement();
        
        //classElement.getChildren(): liste des plats(food)
        List<Element> FoodList = classElement.getChildren();
        System.out.println("----------------------------");
        
        //boucle for pour parcourir la liste des plats (liste des food)
        for (int i = 0; i < FoodList.size(); i++) {    
            Element plat = FoodList.get(i);//plat est food
            System.out.println(i+")" + plat.getName());
            
            
            System.out.println("Nom du plat : " + plat.getChild("name").getText());
            System.out.println("Prix plat : "+ plat.getChild("price").getText());
            System.out.println("description plat : "+ plat.getChild("description").getText());
            System.out.println("calories plat : "+ plat.getChild("calories").getText());
            
            
            
        }

        
        
        
        
        
        
        
        
        
        
		}
		catch(JDOMException e)
		{
	         e.printStackTrace();
	      }catch(IOException ioe)
		{
	         ioe.printStackTrace();
	    }

	}

}

